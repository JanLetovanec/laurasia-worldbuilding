---
import "../styles/global.css";
---
<style>
  .prose {
    width: 100%;
    max-width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;

    padding-block: 10px;
    padding-inline: 50px;

    background-color: var(--bg-all);
  }

  .content {
    max-width: 900px;
    min-width: 350px;
    flex: 1 1;
    padding: 20px;

    background-color: var(--bg-text);
    box-shadow: 0 0 20px var(--shadow);
  }

  .content :global(blockquote) {
    border-left: 5px solid var(--border-highlight);
    background-color: var(--bg-highlight);
    box-shadow: 5px 5px 10px -2px var(--shadow);

    margin-right: 50px;
    padding: 1px 10px 3px 10px;
  }

  .content :global(p){
    margin-block: 10px;
  }

  .content :global(h1), .content :global(h2), .content :global(h3), .content :global(h4) {
    margin-block: 20px 10px;
  }

</style>

<div class="prose">
  <div class="content">
    <slot />
  </div>
</div>
